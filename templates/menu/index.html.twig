{# templates/menu/index.html.twig #}
{% extends 'baseAdmin.html.twig' %}
{% block title %}Menu List - Autolink{% endblock %}
{% block page_title %}Menu List{% endblock %}
{% block content %}
    <a href="{{ path('admin_menus_create') }}" class="btn btn-primary mb-3">Add New Menu Item</a>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Route</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for menu in menus %}
                            <tr>
                                <td>{{ menu.id }}</td>
                                <td>{{ menu.name }}</td>
                                <td>{{ menu.route }}</td>
                                <td>
                                    {% for role in menu.roles %}
                                        {{ role.name }}<br>
                                    {% endfor %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_menus_edit', { 'id': menu.id }) }}" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="{{ path('admin_menus_delete', { 'id': menu.id }) }}" onclick="return confirm('Are you sure you want to delete this menu item?');" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">No menu items found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}