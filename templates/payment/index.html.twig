{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}


<div class="container-payment">
    <!-- Facture -->
    <div class="col-md-6">
        <div class="card shadow mt-4">
            <div class="card-body">
                <h4 class="text-center">üßæ Facture</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix Unitaire</th>
                            <th>Quantit√©</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for panier in paniers %}
                            <tr>
                                <td>{{ panier.article.nom }}</td>
                                <td>{{ panier.prixUnitaire|number_format(2, '.', ',') }} dt</td>
                                <td>{{ panier.quantite }}</td>
                                <td>{{ (panier.prixUnitaire * panier.quantite)|number_format(2, '.', ',') }} dt</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <hr>
                <div><strong>Total HT:</strong> {{ totalHT|number_format(2, '.', ',') }} dt</div>
                <div><strong>TVA (20%):</strong> {{ tva|number_format(2, '.', ',') }} dt </div>
                <div><strong>Total TTC:</strong> {{ totalTTC|number_format(2, '.', ',') }} dt</div>
            </div>
        </div>
    </div>

    <!-- S√©lection du paiement -->
    <div class="right-panel">
        <h4>S√©lectionnez un moyen de paiement :</h4>
        <a href="{{ path('app_payment', {'showCardModal': 1}) }}" class="btn btn-payment">üí≥ Carte Bancaire</a>
        <a href="{{ path('app_payment', {'showCashModal': 1}) }}" class="btn btn-payment">üí∂ Esp√®ces</a>
        <a href="{{ path('app_listarticle') }}" class="btn btn-payment">Annuler</a>
    </div>
</div>

<!-- Modal Carte Bancaire -->
{% if showCardModal %}
<div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Paiement par Carte Bancaire</h5>
                <a href="{{ path('app_payment') }}" class="btn-close" aria-label="Close">‚úñ</a>
            </div>
            <div class="modal-body">
                <form id="payment-form" action="{{ path('app_payment') }}" method="POST">
                    <input type="hidden" name="payment_method" value="card">

                    <!-- Card Element Placeholder -->
                    <div class="mb-3">
                        <label class="form-label">Num√©ro de Carte</label>
                        <div id="card-element"></div> <!-- Stripe's Card Element -->
                    </div>

                    <!-- Card Holder Name (for billing purposes) -->
                    <div class="mb-3">
                        <label class="form-label" for="card_holder">Titulaire de la Carte</label>
                        <input type="text" class="form-control" id="card_holder" placeholder="Nom Pr√©nom" name="card_holder" required>
                    </div>

                    <!-- Submit Button -->
                    <button id="submit-button" type="submit" class="btn btn-payment">Confirmer le Paiement</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- Modal Esp√®ces -->
{% if showCashModal %}
<div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Paiement en Esp√®ces</h5>
                <a href="{{ path('app_payment') }}" class="btn-close">‚úñ</a>
            </div>
            <div class="modal-body">
                <form method="POST" action="{{ path('app_payment') }}">
                    <input type="hidden" name="payment_method" value="especes">
                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Pr√©nom</label>
                            <input type="text" class="form-control" placeholder="Pr√©nom" value="{{ app.user.Name }}" name="name" required>
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Nom</label>
                            <input type="text" class="form-control" placeholder="Nom" value="{{ app.user.lastName }}" name="last_name" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Num√©ro de T√©l√©phone</label>
                        <input type="text" class="form-control" placeholder="Votre num√©ro" value="{{ app.user.phone}}" name="phone" required>
                    </div>
                    <button type="submit" class="btn btn-payment">Confirmer le Paiement</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% for message in app.flashes('error') %}
    <div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Erreur</h5>
                    <a href="{{ path('app_payment') }}" class="btn-close">‚úñ</a>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

{% for message in app.flashes('success') %}
    <div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Succ√®s</h5>
                    <a href="{{ path('app_listarticle') }}" class="btn-close">‚úñ</a>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

