{# templates/user/admin/list_Admins.html.twig #}
{% extends 'baseAdmin.html.twig' %}
{% block title %}Admin List - Autolink{% endblock %}
{% block page_title %}Admin List{% endblock %}
{% block content %}
    <!-- Form to Add a New Admin -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add New Admin</h6>
        </div>
        <div class="card-body">
            {{ form_start(formx, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(formx.name, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(formx.last_name, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(formx.email, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(formx.phone, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(formx.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
            </div>
            {{ form_end(formx) }}
        </div>
    </div>

    <!-- List of Admins -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List of Admins</h6>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-inline mb-3'}}) }}
            {{ form_row(form.query, {'attr': {'class': 'form-control mr-2'}}) }}
            {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
            {{ form_end(form) }}

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Date Creation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for admin in admins %}
                            <tr>
                                <td>{{ admin.id }}</td>
                                <td>{{ admin.name }}</td>
                                <td>{{ admin.lastName }}</td>
                                <td>{{ admin.email }}</td>
                                <td>{{ admin.phone }}</td>
                                <td>{{ admin.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>
                                    <a href="{{ path('edit_admin', { 'id': admin.id }) }}" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="{{ path('delete_admin', { 'id': admin.id }) }}" onclick="return confirm('Are you sure you want to delete this Admin?');" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">No admins found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}