{% extends 'base.html.twig' %}
{% block body %}
<div class="row justify-content-center align-items-center" style="height: 100%;">
    <div class="col-md-6">
        <div class="form-container">
            <h2 class="mb-4 text-center font-weight-bold">Create Account</h2>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <div class="row">
                <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.name, 'Name', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.last_name, 'Last Name', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.last_name) }}
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.email, 'Adresse e-mail', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.password.first, 'Password', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.password.first) }}
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.phone, 'Phone', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.phone) }}
                    </div>
                </div>
                <div class="col-md-6 mb-4 form-group">
                    {{ form_label(form.password.second, 'Repeat Password', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(form.password.second) }}
                    </div>
                </div>
            </div>
            
            <div class="d-grid">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}