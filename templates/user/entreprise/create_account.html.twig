{# templates/user/client/create_account_entreprise.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
<div class="d-flex flex-column h-100">
    <div class="row justify-content-center align-items-center" style="flex: 1;">
        <div class="col-md-6">
            <div class="form-container">
                <h2 class="mb-4 text-center font-weight-bold">Create Entreprise Account</h2>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="row">
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.company_name, 'Company Name', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.company_name, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.company_name) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.field, 'Field', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.field, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.field) }}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.tax_code, 'Tax Code', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.tax_code, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.tax_code) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.email, 'Adresse e-mail', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.password.first, 'Password', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.password.first) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.password.second, 'Repeat Password', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.password.second) }}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-4 form-group">
                        {{ form_label(form.phone, 'Phone', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error">
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>
                </div>
                
                <div class="d-grid">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}