{% extends 'baseEntreprise.html.twig' %}
{% block title %}Entreprise Profile{% endblock %}
{% block page_title %}Profile{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.companyName) }}
                                {{ form_widget(form.companyName, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.companyName) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.field) }}
                                {{ form_widget(form.field, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.field) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.phone) }}
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.phone) }}
                            </div>
                            <div class="form-group">
                                <a href="{{ path('entreprise_change_password') }}" class="btn btn-primary">Change Password</a>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.imageFile) }}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                                {{ form_errors(form.imageFile) }}
                                {% if app.user.imagePath %}
                                    <img src="{{ asset('uploads/' ~ app.user.imagePath) }}" alt="Profile Image" class="img-fluid mt-2" style="max-width: 100px;">
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.addressStreet) }}
                                {{ form_widget(form.addressStreet, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.addressStreet) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.addressCity) }}
                                {{ form_widget(form.addressCity, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.addressCity) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.addressPostalCode) }}
                                {{ form_widget(form.addressPostalCode, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.addressPostalCode) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.addressCountry) }}
                                {{ form_widget(form.addressCountry, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.addressCountry) }}
                            </div>
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}